{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        /* Output */
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": false,
        "noEmit": false,

        /* Module settings */
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "removeComments": true,

        /* Override incompatible option from base tsconfig */
        "allowImportingTsExtensions": false,

        /* Ensure clean type output */
        "declarationMap": true,
        "stripInternal": true,

        /* Strictness */
        "strict": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "vite.config.*"]
}
